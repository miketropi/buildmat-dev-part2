<style>
  .page-design_slideshow {
  padding-top: 98px;
  padding-bottom: 96px;
}
@media (max-width: 768px) {
  .page-design_slideshow {
    padding-top: 32px;
    padding-bottom: 32px;
  }
}
.page-design_slideshow
  .section-container {
  max-width: 100%;
  padding-right: 0;
  margin-left: calc((100% - 1262px) / 2);
}
@media (max-width: 1024px) {
  .page-design_slideshow .section-container {
    margin-left: 0;
  }
}
.page-design_slideshow
  .section_title {
    text-align: center;
  }
/* .page-design_slideshow
  .section_title {
  font-size: 40px;
  font-weight: normal;
  line-height: 125%;
  max-width: 617px;
  letter-spacing: -0.04em;
  margin-bottom: 48px;
} */
@media (max-width: 768px) {
  .page-design_slideshow .section_title {
    font-size: 20px;
    margin-bottom: 24px;
  }
}
.page-design_slideshow .designs {
  overflow-x: hidden;
  scrollbar-width: none;
  position: relative;
}
.page-design_slideshow
  .designs.__active {
  cursor: e-resize;
  overflow-x: scroll;
}
.page-design_slideshow
  .designs.__active
  .design-overlay {
  width: 0;
}
.page-design_slideshow
  .designs.__active.hover
  .design-overlay {
  width: 0;
}
.page-design_slideshow
  .designs:hover
  .slick-arrow {
  opacity: 1;
}
.page-design_slideshow
  .designs::-webkit-scrollbar {
  display: none;
}
.page-design_slideshow
  .designs
  .design-overlay {
  position: absolute;
  width: 100%;
  transition: all 0.5s ease;
  overflow: hidden;
  display: flex;
  justify-content: center;
  height: 100%;
  align-items: center;
  background: rgba(0, 0, 0, 0.7);
}
.page-design_slideshow
  .designs
  .design-overlay
  a {
  width: 50px;
  height: 50px;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-design_slideshow
  .designs
  .design-overlay
  a
  svg {
  width: 15px;
  height: 20px;
}
.page-design_slideshow
  .designs
  .slick-arrow {
  position: absolute;
  width: 50px;
  height: 50px;
  top: 45%;
  border-radius: 50%;
  border: none;
  font-size: 0;
  color: transparent;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9;
  background-size: 28px;
  background-repeat: no-repeat;
  background-position: center;
  transition: all 0.3s ease;
  opacity: 0;
  outline: none;
}
@media (max-width: 768px) {
  .page-design_slideshow .designs .slick-arrow {
    display: none;
  }
}
.page-design_slideshow
  .designs
  .slick-arrow.slick-prev {
  background-image: url("angle-left.svg");
  left: 20px;
}
.page-design_slideshow
  .designs
  .slick-arrow.slick-next {
  background-image: url("angle-right.svg");
  right: 20px;
}
.page-design_slideshow
  .designs
  .flickity-slider {
  display: flex;
}
.page-design_slideshow
  .designs
  .flickity-slider
  .design-item {
  width: 30%;
  margin-right: 64px;
  outline: none;
}
@media (max-width: 768px) {
  .page-design_slideshow .designs .flickity-slider .design-item {
    width: 95%;
    height: auto;
    margin-right: 16px;
  }
}
.page-design_slideshow
  .designs
  .flickity-slider
  .design-item
  img {
  max-width: 100%;
  margin-bottom: 24px;
  height: auto;
}
@media (max-width: 768px) {
  .page-design_slideshow .designs .flickity-slider .design-item img {
    margin-bottom: 8px;
  }
}
.page-design_slideshow
  .designs
  .flickity-slider
  .design-item
  h2 {
  font-weight: normal;
  font-size: 24px;
  line-height: 115%;
  letter-spacing: -0.04em;
}
@media (max-width: 768px) {
  .page-design_slideshow .designs .flickity-slider .design-item h2 {
    font-size: 15px;
  }
}

</style>

<section class="page-section page-design_slideshow">
  <div class="subsection">
    <div class="section-container">
      {% if section.settings.title != blank %}
        <h2 class="section_title">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="designs" data-flickity='{ "wrapAround": true, "pageDots": false, "selectedAttraction": 0.01, "friction": 0.15 }'>
        {% for block in section.blocks %}
          <div class="design-item">
            <img alt="Shop" src="{{ block.settings.d_image | img_url: "master" }}" width="{{block.settings.d_image.width}}" height="{{block.settings.d_image.height}}" />
            <h2>{{ block.settings.d_title }}</h2>
          </div>
        {% endfor %}
        <!--<div class="design-overlay">
          <a href="javascript:void(0)">
            <svg width="12" height="10" viewBox="0 0 12 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.66699 9L11.0003 5L7.66699 1" stroke="black" stroke-linecap="square"/>
            <path d="M1 5H10.4444" stroke="black" stroke-linecap="square"/>
            <path d="M10.9999 5H10.4443" stroke="black" stroke-linecap="round"/>
            </svg>
          </a>
        </div>-->
      </div>
    </div>
  </div>
</section>

  
{% schema %}
  {
    "name": "Section Designs",
    "settings": [
		{
          "type": "html",
          "id": "title",
          "label": "Title"
      	}
	],
    "blocks": [
      {
		"type": "button",
		"name": "Content",
		"settings": [
          {
            "type": "image_picker",
            "id": "d_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "d_title",
            "label": "Title"
          }
		    ]
      }
    ]
  }
{% endschema %}
