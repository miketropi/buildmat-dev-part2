<style>
  .page-whychoose {
  background: #f5f5f5;
  padding-top: 96px;
  padding-bottom: 96px;
}
@media (max-width: 768px) {
  .page-whychoose {
    padding-top: 32px;
    padding-bottom: 8px;
  }
}
.page-whychoose .section-container{
  max-width: 1262px;
  padding-left: 16px;
  padding-right: 16px;
  margin: 0 auto;
}
.page-whychoose
  .section-container {
  max-width: 1056px;
}
.page-whychoose
  h2.section_title {
  text-align: center;
}

.page-whychoose
  .section_desc {
  font-size: 20px;
  line-height: 150%;
  text-align: center;
  letter-spacing: -0.02em;
  max-width: 610px;
  margin: 0 auto;
  margin-bottom: 64px;
}
@media (max-width: 768px) {
.page-whychoose
    .section_desc {
    font-size: 13px;
    margin-bottom: 24px;
  }
}
.page-whychoose
  .image_boxs {
  display: flex;
  text-align: center;
  justify-content: space-between;
}
@media (max-width: 768px) {
.page-whychoose
    .image_boxs {
    flex-wrap: wrap;
    justify-content: center;
  }
}
.page-whychoose
  .image_boxs
  .image_box {
  flex: 0 0 calc((100% - 128px) / 5);
  padding: 0 15px;
}
@media (max-width: 768px) {
.page-whychoose
    .image_boxs
    .image_box {
    flex: 0 0 calc((100% - 16px) / 3);
    margin-bottom: 24px;
  }
}
.page-whychoose
  .image_boxs
  .image_box
  .image_box_image {
  margin-bottom: 16px;
}
.page-whychoose
  .image_boxs
  .image_box
  .image_box_image
  img {
  max-width: 56px;
}
@media (max-width: 768px) {
.page-whychoose
    .image_boxs
    .image_box
    .image_box_image
    img {
    max-width: 40px;
  }
}
.page-whychoose
  .image_boxs
  .image_box
  .image_box_text {
  font-weight: normal;
  font-size: 18px;
  line-height: 115%;
  text-align: center;
  letter-spacing: -0.03em;
}
@media (max-width: 768px) {
.page-whychoose
    .image_boxs
    .image_box
    .image_box_text {
    font-size: 13px;
  }
}

</style>
<section class="page-section page-whychoose">
  <div class="subsection">
    <div class="section-container">
      {% if section.settings.title != blank %}
        <h2 class="section_title">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="section_desc">{{ section.settings.description }}</div>
    </div>
  </div>
  <div class="subsection">
    <div class="section-container">
      <div class="image_boxs">
      	{% for block in section.blocks %}
          <div class="image_box" {{ block.shopify_attributes }}>
            {% if block.settings.box_image != blank %}
                <div class="image_box_image">
                  <img alt="{{ block.settings.box_text | escape }}" src="{{ block.settings.box_image | img_url: "master" }}" />
            	</div>
            {% endif %}
            {% if block.settings.box_text != blank %}
                <div class="image_box_text">{{ block.settings.box_text }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Section Why choose",
    "settings": [
		{
          "type": "html",
          "id": "title",
          "label": "Title"
      	},
		{
          "type": "html",
          "id": "description",
          "label": "Description"
      	}
	],
    "blocks": [
      {
		"type": "imagebox",
		"name": "Image Box",
		"settings": [
          {
          "type": "image_picker",
          "id": "box_image",
          "label": "Image"
          },
          {
          "type": "html",
          "id": "box_text",
          "label": "Text"
          }
		]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
